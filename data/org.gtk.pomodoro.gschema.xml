<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema path="/org/gtk/pomodoro/" id="org.gtk.pomodoro">
    <key name="workdur" type="i">
      <range min="1" max="200" />
      <default>25</default>
      <summary>Work duration:</summary>
      <description>Duration of each work interval in minutes.</description>
    </key>
    <key name="breakdur" type="i">
      <range min="1" max="80" />
      <default>5</default>
      <summary>Break duration:</summary>
      <description>Duration of each break interval in minutes.</description>
    </key>
    <key name="theme" type="i">
      <range min="0" max="1" />
      <default>0</default>
      <summary>Color theme:</summary>
      <description>Color theme of the app.</description>
    </key>
  </schema>
</schemalist>
