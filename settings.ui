<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="PomoSettingsDialog" parent="GtkApplicationWindow">
    <property name="title" translatable="yes">Settings</property>
    <property name="resizable">0</property>
    <property name="modal">1</property>

    <object class="GtkAdjustment" id="work_adjustment">
      <property name="lower">1</property>
      <property name="upper">200</property>
      <property name="step-increment">1</property>
    </object>

    <object class="GtkAdjustment" id="break_adjustment">
      <property name="lower">1</property>
      <property name="upper">80</property>
      <property name="step-increment">1</property>
    </object>

    <object class="GtkShortcutsGroup">
      <property name="title" context="shortcut window">General</property>
      <child>
        <object class="GtkShortcutsShortcut">
          <property name="title" context="shortcut window">Open</property>
          <property name="action-name">win.open</property>
        </object>
      </child>
    </object>

    <child>
      <object class="GtkBox">
        <property name="orientation">1</property>
        <child>
          <object class="GtkGrid" id="grid">
            <property name="margin-start">12</property>
            <property name="margin-end">12</property>
            <property name="margin-top">12</property>
            <property name="margin-bottom">12</property>
            <property name="row-spacing">12</property>
            <property name="column-spacing">12</property>
            <child>
              <object class="GtkLabel" id="worklabel">
                <property name="label">_Work duration:</property>
                <property name="use-underline">1</property>
                <property name="mnemonic-widget">workdur</property>
                <property name="xalign">1</property>
                <layout>
                  <property name="column">0</property>
                  <property name="row">0</property>
                </layout>
              </object>
            </child>
            
            <child>
              <object class="GtkSpinButton" id="workdur">
                <property name="adjustment">work_adjustment</property>
                <layout>
                  <property name="column">1</property>
                  <property name="row">0</property>
                </layout>
              </object>
            </child>

            <child>
              <object class="GtkLabel" id="breaklabel">
                <property name="label">_Break duration:</property>
                <property name="use-underline">1</property>
                <property name="mnemonic-widget">breakdur</property>
                <property name="xalign">1</property>
                <layout>
                  <property name="column">0</property>
                  <property name="row">1</property>
                </layout>
              </object>
            </child>

            <child>
              <object class="GtkSpinButton" id="breakdur">
                <property name="adjustment">break_adjustment</property>
                <layout>
                  <property name="column">1</property>
                  <property name="row">1</property>
                </layout>
              </object>
            </child>

            <child>
              <object class="GtkLabel" id="themelabel">
                <property name="label">_Color theme:</property>
                <property name="use-underline">1</property>
                <property name="mnemonic-widget">theme</property>
                <property name="xalign">1</property>
                <layout>
                  <property name="column">0</property>
                  <property name="row">2</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkDropDown" id="theme">
                <property name="model">
                  <object class="GtkStringList">
                    <items>
                      <item>Dark</item>
                      <item>Light</item>
                    </items>
                  </object>
                </property>
                <layout>
                  <property name="column">1</property>
                  <property name="row">2</property>
                </layout>
              </object>
            </child>

          </object>
        </child>
      </object>
    </child>

  </template>
</interface>
